<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4" main_tree_to_execute="CompleteInspection">
    <!-- Main tree that runs both undocking and pipeline inspection -->
    <BehaviorTree ID="CompleteInspection">
        <Sequence name="complete_mission_sequence">
            <!-- First run the undocking sequence -->
            <SubTree ID="UnDocking" />
            
            <!-- Then run the pipeline inspection -->
            <SubTree ID="PipeLineInspection" />
        </Sequence>
    </BehaviorTree>

    <!-- Undocking subtree -->
    <BehaviorTree ID="UnDocking">
        <Sequence name="undocking_sequence">
            <!-- Exit docking station -->
            <NavigateToWaypoint name="navigate_from_dock"
                x="-220.70"
                y="60.50"
                z="194.90"
                velocity="0.1"
                fixed_heading="true"
                heading="3.14"/>
                
            <!-- Brief station keeping to stabilize -->
            <StationKeeping name="station_keep_after_undock"
                x="-220.70"
                y="60.50"
                z="194.90"
                heading="3.14"
                duration="40"/>
        </Sequence>
    </BehaviorTree>

    <!-- Pipeline inspection subtree -->
    <BehaviorTree ID="PipeLineInspection">
        <Sequence name="pipeline_sequence">
            <!-- Point 1: First navigate there -->
            <NavigateToWaypoint name="navigate_to_point1"
                               x="-210.50" 
                               y="108.00" 
                               z="193.00" 
                               velocity="0.4" 
                               fixed_heading="false" 
                               heading="0.0"/>
            
            <!-- Point 1: Then station keep with correct heading -->
            <StationKeeping name="station_keep_point1"
                        x="-210.50" 
                        y="108.00" 
                        z="193.00" 
                        heading="1.57" 
                        duration="60"/>
            
            <!-- Point 2: First navigate there -->
            <NavigateToWaypoint name="navigate_to_point2"
                               x="-210.50" 
                               y="134.50" 
                               z="193.00" 
                               velocity="0.2" 
                               fixed_heading="false" 
                               heading="1.57"/>
            
            <!-- Point 2: Then station keep with correct heading -->
            <StationKeeping name="station_keep_point2"
                        x="-210.50" 
                        y="134.50" 
                        z="193.00" 
                        heading="3.14" 
                        duration="60"/>
            
            <!-- Point 3: First navigate there -->
            <NavigateToWaypoint name="navigate_to_point3"
                               x="-233.00" 
                               y="134.50" 
                               z="193.00" 
                               velocity="0.2" 
                               fixed_heading="false" 
                               heading="3.14"/>
            
            <!-- Point 3: Then station keep with correct heading -->
            <StationKeeping name="station_keep_point3"
                        x="-233.00" 
                        y="134.50" 
                        z="193.00" 
                        heading="-1.57" 
                        duration="60"/>
            
            <!-- Point 4: First navigate there -->
            <NavigateToWaypoint name="navigate_to_point4"
                               x="-233.00" 
                               y="130.50" 
                               z="193.00" 
                               velocity="0.2" 
                               fixed_heading="false" 
                               heading="-1.57"/>
            
            <!-- Point 4: Then station keep with correct heading -->
            <StationKeeping name="station_keep_point4"
                        x="-233.00" 
                        y="130.50" 
                        z="193.00" 
                        heading="3.14" 
                        duration="60"/>
            
            <!-- Point 5: Navigate there -->
            <NavigateToWaypoint name="navigate_to_point5"
                               x="-251.00" 
                               y="130.50" 
                               z="193.00" 
                               velocity="0.2" 
                               fixed_heading="false" 
                               heading="3.14"/>
            
            <!-- Point 5: Station keep with correct heading -->
            <StationKeeping name="station_keep_point5"
                        x="-251.00" 
                        y="130.50" 
                        z="193.00" 
                        heading="-1.57" 
                        duration="60"/>
            
            <!-- Point 6: Navigate there -->
            <NavigateToWaypoint name="navigate_to_point6"
                               x="-251.00" 
                               y="109.50" 
                               z="193.00" 
                               velocity="0.2" 
                               fixed_heading="false" 
                               heading="-1.57"/>
            
            <!-- Point 6: Station keep with correct heading -->
            <StationKeeping name="station_keep_point6"
                        x="-251.00" 
                        y="109.50" 
                        z="193.00" 
                        heading="-1.57" 
                        duration="60"/>
        </Sequence>
    </BehaviorTree>
    
    <!-- Description of Node Models (used by Groot) -->
    <TreeNodesModel>
        <Action ID="NavigateToWaypoint">
            <input_port name="x" type="Double">X coordinate</input_port>
            <input_port name="y" type="Double">Y coordinate</input_port>
            <input_port name="z" type="Double">Z coordinate</input_port>
            <input_port name="velocity" type="Double">Desired velocity</input_port>
            <input_port name="fixed_heading" type="Boolean">Whether to use fixed heading</input_port>
            <input_port name="heading" type="Double">Desired heading</input_port>
        </Action>
        <Action ID="StationKeeping">
            <input_port name="x" type="Double">X coordinate</input_port>
            <input_port name="y" type="Double">Y coordinate</input_port>
            <input_port name="z" type="Double">Z coordinate</input_port>
            <input_port name="heading" type="Double">Desired heading</input_port>
            <input_port name="duration" type="Int">Duration in seconds</input_port>
        </Action>
        <SubTree ID="PipeLineInspection" />
        <SubTree ID="UnDocking" />
    </TreeNodesModel>
</root>